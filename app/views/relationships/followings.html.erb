<h1>Followers Users</h1>

<table class='table'>
  <tr>
    <th>image</th>
    <th>name</th>
    <th colspan="3"></th>
  </tr>


<% @users.each do |user| %>
  <tr>
     <th><%= image_tag user.get_profile_image, size: '50x50' %></th>
     <th><%= user.name %></th>
     <th>フォロー数: <%= user.followings.count %></th>
     <th>フォロワー数: <%= user.followers.count %></th>
     <th><%= link_to 'Show', user %></th>
  </tr>
<% end %>

  </table>